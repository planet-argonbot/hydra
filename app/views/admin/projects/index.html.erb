<h1>Projects</h1>
<div class="table-actions">
  <%= link_to "Add a new project", new_admin_project_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>Project Name</td>
      <td>Number of Releases</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, admin_project_path(project) %></td>
      <td><%= project.releases_count || 0 %></td>
      <td><%= link_to 'Edit project', edit_admin_project_path(project), class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
