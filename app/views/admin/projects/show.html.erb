<h1><%= @project.name %></h1>

<h3>Releases</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Branch</th>
      <th>Environment</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
    <tr>
      <td><%= gravatar_image_tag release.admin.email, gravatar: { size: 45 } %></td>
      <td><%= release.admin.name %></td>
      <td><%= release.branch %></td>
      <td><%= release.environment %></td>
      <td><%= release.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>