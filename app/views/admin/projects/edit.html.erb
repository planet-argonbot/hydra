<h1>Edit project</h1>

<%= form_for [:admin, @project] do |f| %>
  <fieldset>
    <label>Project name</label>
    <%= f.text_field :name, placeholder: 'Enter a project name', class: "input-xxlarge" %>
    <label>Url name</label>
    <%= f.text_field :slug, class: "input-xxlarge", disabled: true %>
    <label>State</label>
    <%= f.text_field :aasm_state, class: "input-xxlarge", disabled: true %>
  </fieldset>

  <%= f.submit 'Update project', class: 'btn btn-success' %>
  <%= link_to 'Cancel', admin_projects_path, class: 'btn' %>
<% end %>
